<LinearLayout app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:id="@+id/fragment_history_menu_bottom"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:background="#ffffff"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#e5e5e5"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FLAG MURAL"
            android:padding="12dp"
            android:textColor="#929292"
            android:gravity="center"
            android:layout_weight="3"/>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CANCEL"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ff403b"/>
</LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/green"
        android:id="@+id/flag_wrong_info"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:text="Wrong Information"
            android:gravity="center|start"
            android:paddingLeft="12dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"
            />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_right_arrow"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="12dp"
        app:cardElevation="8dp"
        android:id="@+id/inaccurate_info"
        app:cardBackgroundColor="@color/green"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="wrap_content"
                android:text="Inaccurate location"
                android:gravity="center|start"
                android:paddingLeft="12dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_right_arrow"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="12dp"
        app:cardElevation="8dp"
        android:id="@+id/damaged_removed"
        app:cardBackgroundColor="@color/green"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="wrap_content"
                android:text="Damaged/removed mural"
                android:gravity="center|start"
                android:paddingLeft="12dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_right_arrow"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="12dp"
        app:cardElevation="8dp"
        android:id="@+id/other"
        app:cardBackgroundColor="@color/green"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="wrap_content"
                android:text="Other"
                android:gravity="center|start"
                android:paddingLeft="12dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_right_arrow"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>